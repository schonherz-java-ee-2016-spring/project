<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="training-core"
		transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/SCHTraining</jta-data-source>
		<class>hu.schonherz.training.entity.BaseEntity</class>
		<class>hu.schonherz.training.entity.Role</class>
		<class>hu.schonherz.training.entity.RoleGroup</class>
		<class>hu.schonherz.training.entity.User</class>
		<class>hu.schonherz.training.entity.UserGroup</class>
		<class>hu.schonherz.training.exam.entity.Answer</class>
		<class>hu.schonherz.training.exam.entity.AnswerNote</class>
		<class>hu.schonherz.training.exam.entity.AnswerText</class>
		<class>hu.schonherz.training.exam.entity.Exam</class>
		<class>hu.schonherz.training.exam.entity.Option</class>
		<class>hu.schonherz.training.exam.entity.Question</class>
		<class>hu.schonherz.training.exam.entity.QuestionType</class>
		<class>hu.schonherz.training.supervisor.entity.Feedback</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.default_schema" value="public" />
			<property name="hibernate.hbm2ddl.import_files" value="create.sql" />
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />
			<property name="hibernate.ejb.entitymanager_factory_name"
				value="EntityManagerJNDI" />
		</properties>

	</persistence-unit>
</persistence>
