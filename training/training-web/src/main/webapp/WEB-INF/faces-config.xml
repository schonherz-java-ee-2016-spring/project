<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<converter>
    	<converter-id>UserConverter</converter-id>
    	<converter-class>hu.schonherz.training.web.UserConverter</converter-class>
	</converter>	<application>
	 <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>hu_HU</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
        
        <resource-bundle>
            <base-name>
                hu.schonherz.training.Messages
            </base-name>
            <var>out</var>	
        </resource-bundle>
	</application>
	
	 <navigation-rule>
		<from-view-id>/testfeatures/exams.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToExamQuestionsPage</from-outcome>
			<to-view-id>/testfeatures/examQuestions.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/testfeatures/textbasedQuestion.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToExamQuestionsPage</from-outcome>
			<to-view-id>/testfeatures/examQuestions.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/testfeatures/examQuestions.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToSingleQuestionPage</from-outcome>
			<to-view-id>/testfeatures/singleQuestion.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToMultipleQuestionPage</from-outcome>
			<to-view-id>/testfeatures/multipleQuestion.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToTextbasedQuestionPage</from-outcome>
			<to-view-id>/testfeatures/textbasedQuestion.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/testfeatures/multipleQuestion.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToExamQuestionsPage</from-outcome>
			<to-view-id>/testfeatures/examQuestions.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/testfeatures/singleQuestion.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToExamQuestionsPage</from-outcome>
			<to-view-id>/testfeatures/examQuestions.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

</faces-config>
